<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/public/stylesheets/all-lfg-media.css">
<%- include('../partials/nav') %>

<main>
  <h1 class="h1-title"><%= title %></h1>
  <form id="new-lfg-form" action="/lfgs" method="POST">
    <label for="lfg-title">Post Title: </label>
    <input type="text" name="name" autocomplete="off" id="lfg-title">
    <label for="game-select">Game: </label>
    <select name="game" id="game-select">
      <% games.forEach(game => { %>
        <option value="<%= game._id %>"><%= game.name %></option>
      <% }) %>
    </select>
    <label id="playerNo-input" for="playerNum">Number of Players: </label>
    <input type="number" name="playerNo" id="playerNum">
    <textarea name="content" id="lfg-content" placeholder="Please enter description..."></textarea>
    <button id="lfg-submit-btn" type="submit">Post LFG</button>
  </form>
</main>

<%- include('../partials/footer') %>
