<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div id="lfg-post" class="card">
    <% lfgs.forEach(lfg => { %>
    <!-- <img src="..." class="card-img-top" alt="..."> -->
    <a id="card-a" href="/lfgs/<%= lfg._id %>">
      <div class="card-body">
        <h5 id="card-title" class="card-text"><%= lfg.name %></h5>
        <div id="card-subtitle">
          <h6 class="card-text">Game: <%= lfg.game.name %></h6>
          <h6 class="card-text">Posted by: <%= lfg.owner.name %></h6>
        </div>
      </div>
    </a>
    <% }) %>
  </div>
</main>

<%- include('../partials/footer') %>
